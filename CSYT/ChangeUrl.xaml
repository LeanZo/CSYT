<Window x:Class="CSYT.ChangeUrl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSYT"
        mc:Ignorable="d"
        Title="Change Video" Height="100.896" Width="393.214" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">

    <Grid FocusManager.FocusedElement="{Binding ElementName=TextBoxUrl}">
        <TextBlock x:Name="TextBlockUrl" Margin="15,12" Foreground="Gray" Text="Insert Video Url..."/>
        <TextBox x:Name="TextBoxUrl" Background="Transparent" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="278" TextChanged="TextBoxUrl_TextChanged"/>
        <Button x:Name="BtnOk" Content="OK" HorizontalAlignment="Left" Margin="293,12,0,0" VerticalAlignment="Top" Width="75" Click="BtnOk_Click" IsDefault="True" IsEnabled="False"/>
        <CheckBox x:Name="ChkLoop" Content="Loop" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
